# Maadhuri Shop Backend - Environment Variables

# Server Configuration
NODE_ENV=production
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/maadhuri-shop?retryWrites=true&w=majority
# Alternative for local development:
# MONGODB_URI=mongodb://localhost:27017/maadhuri-shop

# Email Configuration (Gmail)
EMAIL_USER=your_gmail@gmail.com
EMAIL_PASSWORD=your_app_specific_password
ADMIN_EMAIL=smkoushikk@gmail.com

# WhatsApp Configuration
WHATSAPP_PHONE_NUMBER=919876543210

# CORS Settings
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# JWT Secret (if implementing authentication later)
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production

# Hosting Information
HOSTINGER_DOMAIN=yourdomain.com
API_BASE_URL=https://api.yourdomain.com

# Admin Dashboard
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password
# Note: For login, use ADMIN_EMAIL and ADMIN_PASSWORD. Notifications will be sent to ADMIN_EMAIL (smkoushikk@gmail.com)

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
